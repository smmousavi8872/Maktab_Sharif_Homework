<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_margin="5dp"
  android:orientation="horizontal">

  <TextView
    android:id="@+id/txt_initial_cirlce"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:background="@drawable/initail_circle"
    android:gravity="center"
    android:text="A"
    android:textColor="#fff"
    android:textSize="30dp"/>

  <RelativeLayout

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <TextView
      android:id="@+id/txt_list_item_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_marginTop="5dp"
      android:drawablePadding="5dp"
      android:gravity="center_vertical"
      android:text="Doing Maktab Homework"
      android:textColor="#000"
      android:textSize="17dp"/>

    <TextView
      android:id="@+id/txt_list_item_subtitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_below="@id/txt_list_item_title"
      android:layout_marginTop="3dp"
      android:drawablePadding="5dp"
      android:text="Date and Time Aren't Set"
      android:textSize="14dp"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_marginEnd="10dp"
      android:layout_marginTop="10dp"
      android:drawableStart="@drawable/ic_done_black_24dp"/>

    <Button
      android:id="@+id/btn_list_item_done"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="10dp"
      android:gravity="center"
      android:text="Done"
      android:textSize="13dp"/>

  </RelativeLayout>
</LinearLayout>