<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_margin="10dp">

  <TextView
    android:id="@+id/txt_list_item_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_marginStart="24dp"
    android:gravity="center_vertical"
    android:text="Doing Maktab Homework"
    android:textColor="#000"
    android:textSize="17dp"/>

  <TextView
    android:id="@+id/txt_list_item_subtitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_marginStart="24dp"
    android:layout_marginTop="2dp"
    android:layout_below="@id/txt_list_item_title"
    android:text="Date and Time Aren't Set"
    android:textSize="14dp"/>

  <Button
    android:id="@+id/btn_list_item_done"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="10dp"
    android:drawableStart="@drawable/ic_done_black_24dp"
    android:gravity="center"
    android:text="Done"
    android:textSize="13dp"/>


</RelativeLayout>